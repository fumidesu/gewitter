<%= form_for(@gewitter, url: choose_new_or_edit) do |f| %>
  <% if @gewitter.errors.any? %>
    <div id="error_explanation">
      <h2><%= @gewitter.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @gewitter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit 'ゲビッタ投稿', class: 'btn btn-success btn-block' %>
<% end %>

<%=link_to "ゲビッタ一覧画面に戻る", gewitters_path %>